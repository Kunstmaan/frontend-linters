{
    "extends": [
        "tslint-config-airbnb",
        "tslint-react"
    ],
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-line-length": [true, 120],
        "no-unused-variable": true,
        "no-unused-expression": true,
        "no-switch-case-fall-through": true,
        "object-shorthand-properties-first": null,
        "function-name": false,
        "import-name": false,
        "jsx-boolean-value": false,
        "variable-name": [true, "allow-pascal-case"],
        "ter-arrow-parens": ["error", "always"],
        // react-eslint overwrites
        // Require a lot of extra constants / functions
        // https://github.com/palantir/tslint-react/issues/4
        "jsx-no-multiline-js": null,
        // Performance gain is very little and results in less readable code
        // https://github.com/palantir/tslint-react/issues/96
        "jsx-no-lambda": null
    }
}