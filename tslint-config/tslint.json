{
    "extends": [
        "tslint-config-airbnb",
        "tslint-react"
    ],
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "ter-indent": [
            true,
            4,
            { "SwitchCase": 1 }
        ],
        "no-unused-variable": true,
        "no-unused-expression": true,
        "no-switch-case-fall-through": true,
        "function-name": false,
        "import-name": false,
        "jsx-boolean-value": false
    }
}
